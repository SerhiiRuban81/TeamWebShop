@model IEnumerable<TeamWebShop.Models.DTOs.Admins.AdminDTO>

<h1>Admins</h1>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Email</th>
            <th>Role</th>
            <th>Permissions</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var admin in Model)
        {
                <tr>
                    <td>@admin.Id</td>
                    <td>@admin.Email</td>
                    <td>@admin.Role</td>
                    <td>@(admin.Permissions != null ? string.Join(", ", admin.Permissions) : "None")</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@admin.Id" class="btn btn-info">Details</a>
                        <a asp-action="Edit" asp-route-id="@admin.Id" class="btn btn-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@admin.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
        }
    </tbody>
</table>
<a asp-action="Create" class="btn btn-primary">Add New Admin</a>
