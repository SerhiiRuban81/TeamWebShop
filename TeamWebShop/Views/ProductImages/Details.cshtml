@model ShopLibrary.ProductImage
@* @model TeamWebShop.Models.DTOs.ProductImages.ProductImageDTO *@

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <table class="table">
        <tr>
            <td>
                <img src="data:image/*;base64,@Convert.ToBase64String(Model.ImageData)"
                alt="@Model.Product?.ProductName" style="width: 200px" />
            </td>
            <td>
                    @Html.DisplayFor(modelItem => Model.Product.ProductName)
            </td>
        </tr>
    </table>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>



