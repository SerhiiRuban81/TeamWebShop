@model ShopLibrary.Category

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>
<div style="margin: 2rem;">
    <h1 style="text-align:center;">Category</h1>
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th scope="col">@Html.DisplayNameFor(model => model.CategoryName)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.ParentCategory)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Html.DisplayFor(modelItem => modelItem.CategoryName)</td>
                <td>@Html.DisplayFor(modelItem => modelItem.ParentCategory.CategoryName)</td>
                <td>
                    <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
                    <a class="btn btn-sm btn-info" asp-action="Index">Back to List</a>
                </td>
            </tr>
        </tbody>
    </table>
</div>