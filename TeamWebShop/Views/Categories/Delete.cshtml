@model ShopLibrary.Category
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
<div class="container mt-5">
    <h2 class="text-center mb-4">Are you sure you want to delete this?</h2>
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th scope="col">@Html.DisplayNameFor(model => model.CategoryName)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.ParentCategory)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Html.DisplayFor(modelItem => modelItem.CategoryName)</td>
                <td>
                    @if (Model.ParentCategory != null)
                    {
                        @Model.ParentCategory.CategoryName
                    }
                    else
                    {
                        <span>Немає</span>
                    }
                </td>
                <td>
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Delete" class="btn btn-danger" /> |
                        <a asp-action="Index">Back to List</a>
                    </form>
                </td>
            </tr>
        </tbody>
    </table>

</div>