<div class="container mt-4">
    <h1 class="mb-4">Products</h1>
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var product in Model)
        {
            <div class="col">
                @Html.Partial("_ProductCard", product)
