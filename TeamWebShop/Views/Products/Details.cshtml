@model ShopLibrary.Product

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div class="row row-cols-1 row-cols-lg-2">
    <div class="col">
        <div id="carouselExampleIndicators" class="carousel slide">
            @if (Model.ProductImages != null)
            {
            <div class="carousel-indicators">
                @for (int j = 0; j < Model.ProductImages.Count(); j++)
                {
                    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="@j"
                            class="active" aria-current="true" aria-label="Slide @(j+1)"></button>
                }
            </div>
            <div class="carousel-inner">
                @{
                    int i = 0;
                }
                @foreach (var image in Model.ProductImages!)
                {
                    <div class="carousel-item @(i==0 ? "active" : "")">
                        <img src="data:image/*;base64,@(Convert.ToBase64String(image.ImageData))"
                             class="d-block w-100 bg-dark-subtle object-fit-contain" height="540" alt="@Model.ProductName">
                    </div>
                    @(i++)
                }
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
            }
        </div>
    </div>
    <div class="col">
        <div class="card-body">
            <h2 class="card-title">@Model.Brand.BrandName @Model.ProductName @Model.ProductModel</h2>
            <p class="card-text">@Model.Description</p>
            <p class="card-text">Color: <span style="background-color: @(Model.Color); color: @(Model.Color)">@Model.Color</span></p>
            <p class="card-text"><small class="text-body-secondary">@Model.Price</small></p>
            <p>
                <form asp-controller="Cart" asp-action="AddToCart">
                    <input type="hidden" name="id" value="@Model.Id" />
                    <input type="hidden" name="returnUrl" value="@($"{Context.Request.Path}{Context.Request.QueryString}")" />
                    <button type="submit" class="btn btn-primary">Buy</button>
                </form>
            </p>
        </div>
    </div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>