@using TeamWebShop.Models.ViewModels.Products
@model CreateProductVM

@{
    ViewData["Title"] = "Add New Product";
}

<div class="container mt-5">
    <h1 class="mb-4 text-center">Add New Product</h1>
    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="Create" method="post">
                <div class="mb-3">
                    <label asp-for="ProductDTO.ProductName" class="form-label">Product Name</label>
                    <input asp-for="ProductDTO.ProductName" class="form-control" />
                    <span asp-validation-for="ProductDTO.ProductName" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="ProductDTO.Price" class="form-label">Price</label>
                    <input asp-for="ProductDTO.Price" class="form-control" type="number" step="0.01" />
                    <span asp-validation-for="ProductDTO.Price" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="ProductDTO.BrandId" class="form-label">Brand</label>
                    <select asp-for="ProductDTO.BrandId" asp-items="Model.Brands" class="form-select"></select>
                    <span asp-validation-for="ProductDTO.BrandId" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="ProductDTO.CategoryId" class="form-label">Category</label>
                    <select asp-for="ProductDTO.CategoryId" asp-items="Model.Categories" class="form-select"></select>
                    <span asp-validation-for="ProductDTO.CategoryId" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="ProductDTO.Description" class="form-label">Description</label>
                    <textarea asp-for="ProductDTO.Description" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="ProductDTO.Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProductDTO.Color" class="control-label"></label>
                    <input type="color" asp-for="ProductDTO.Color" class="form-control" />
                    <span asp-validation-for="ProductDTO.Color" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProductDTO.ProductModel" class="control-label"></label>
                    <input asp-for="ProductDTO.ProductModel" class="form-control" />
                    <span asp-validation-for="ProductDTO.ProductModel" class="text-danger"></span>
                </div>
                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                    <button type="submit" class="btn btn-primary">Add</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}