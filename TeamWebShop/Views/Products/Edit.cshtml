@using TeamWebShop.Models.ViewModels.Products
@model CreateProductVM

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProductDTO.Id" />
            <div class="form-group">
                <label asp-for="ProductDTO.ProductName" class="control-label"></label>
                <input asp-for="ProductDTO.ProductName" class="form-control" />
                <span asp-validation-for="ProductDTO.ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductDTO.Description" class="control-label"></label>
                <input asp-for="ProductDTO.Description" class="form-control" />
                <span asp-validation-for="ProductDTO.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductDTO.Price" class="control-label"></label>
                <input type="number" step="0.5" asp-for="ProductDTO.Price" class="form-control" />
                <span asp-validation-for="ProductDTO.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductDTO.BrandId" class="control-label"></label>
                <select asp-for="ProductDTO.BrandId" class="form-control" asp-items="@Model.Brands"></select>
                <span asp-validation-for="ProductDTO.BrandId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductDTO.CategoryId" class="control-label"></label>
                <select asp-for="ProductDTO.CategoryId" class="form-control" asp-items="@Model.Categories"></select>
                <span asp-validation-for="ProductDTO.CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductDTO.Color" class="control-label"></label>
                <input asp-for="ProductDTO.Color" class="form-control" />
                <span asp-validation-for="ProductDTO.Color" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductDTO.ProductModel" class="control-label"></label>
                <input asp-for="ProductDTO.ProductModel" class="form-control" />
                <span asp-validation-for="ProductDTO.ProductModel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
